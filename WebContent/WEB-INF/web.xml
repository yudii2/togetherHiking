<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>together_hiking</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  
  <filter>
  	<filter-name>encodingFilter</filter-name>
  	<filter-class>com.togetherHiking.common.filter.EncodingFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>encodingFilter</filter-name>
  	<url-pattern>/*</url-pattern>
  </filter-mapping>
  
  <filter>
  	<filter-name>wrapperFilter</filter-name>
  	<filter-class>com.togetherHiking.common.filter.WrapperFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>wrapperFilter</filter-name>
  	<url-pattern>/*</url-pattern>
  </filter-mapping>
  
  <!-- 파일 필터 -->
  <filter>
  	<filter-name>fileFilter</filter-name>
  	<filter-class>com.togetherHiking.common.filter.FileFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>fileFilter</filter-name>
  	<url-pattern>/file/*</url-pattern>
  </filter-mapping>
  
  <error-page>
  	<error-code>404</error-code>
  	<location>/WEB-INF/views/error/404.jsp</location>
  </error-page>	  
</web-app>